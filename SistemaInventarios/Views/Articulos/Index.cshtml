@model IEnumerable<SistemaInventarios.Models.AppDBContext.Articulos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Artículos</h2>

<p>
    @Html.ActionLink("Agregar Artículo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("Cantidad")
        </th>
        <th>
            @Html.DisplayName("Descripción")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreArt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantidadArt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionArt)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdArticulo }) |
            @Html.ActionLink("Ver más", "Details", new { id=item.IdArticulo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdArticulo })
        </td>
    </tr>
}

</table>
