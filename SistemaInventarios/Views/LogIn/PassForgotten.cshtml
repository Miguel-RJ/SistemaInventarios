@model SistemaInventarios.Models.Usuario

@{
    ViewBag.Title = "PassForgotten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recuperación de Contraseña</h2>
<h4>
    @ViewBag.Mensaje
</h4>
<form action="PassForgotten" method="post">
    <div class="form-group">
        @Html.Label("Id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IdUser, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Palabra se seguridad:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Palabra, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

</form>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink("Regresar a LogIn","LogIn","LogIn")
    </div>
</div>

